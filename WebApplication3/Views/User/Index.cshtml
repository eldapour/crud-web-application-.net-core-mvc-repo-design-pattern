@model IEnumerable<WebApplication3.Entities.DbUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="user" class="btn btn-sm btn-success" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="user" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="user" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
